apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ name }}-pv
  labels:
    pv-usage: {{ name }}
spec:
  persistentVolumeReclaimPolicy: Retain
  storageClassName: default
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: {{ storage_size }}
  hostPath:
    path: /data/{{ name }}-pv/